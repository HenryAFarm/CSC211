import java.util.Scanner;

public class Main{
	public static void main(String[] args) {
	    Scanner scnr = new Scanner(System.in);
	    boolean Again = true;
	    
	    while (Again){
	        int correctNumber = (int)(Math.random() * 100) + 1;
	        int yourAttempts = 0; 
	        boolean correct = false;
	        
	       while (yourAttempts <= 5 && !correct){
	         System.out.println("This is your # of attempts: " + yourAttempts );
	         System.out.println("Please enter a number from 1 - 100: ");  
	         int userGuess = scnr.nextInt();
	         yourAttempts++;
	         
	         if(userGuess > correctNumber){
	            System.out.println("Too high, Try Again!\n");
	        }else if (userGuess < correctNumber){
	            System.out.println("Too low, Try Again!\n");
	        }else {
	            System.out.println("Congratulations! You've guessed the correct number.");
	            correct = true;
	        }
	       } 
	       if (!correct){
	           System.out.println("All the Attempts have been used up User!");
	           System.out.println("The Correct Number was: " + correctNumber);
	       } 
	    System.out.println("Would you like to try again! (yes/no)");
	    String userChoice = scnr.next();
	    Again = userChoice.equalsIgnoreCase("yes");
    }
    System.out.println("Thanks for playing this game!");
}}








