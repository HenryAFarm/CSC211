//Also using GradeDemo to be the result of this!!


import javax.swing.JOptionPane;

// first class (parent)
class GradedActivity {
    private double score;

    public void setScore(double s) {
        score = s;
    }

    public double getScore() {
        return score;
    }

    public char getGrade() {
        char letterGrade;

        if (score >= 90)
            letterGrade = 'A';
        else if (score >= 80)
            letterGrade = 'B';
        else if (score >= 70)
            letterGrade = 'C';
        else if (score >= 60)
            letterGrade = 'D';
        else
            letterGrade = 'F';

        return letterGrade;
    }
}

// second class
class PassFailActivity extends GradedActivity {
    private double minPassingScore;

    public PassFailActivity(double mps) {
        minPassingScore = mps;
    }

    @Override
    public char getGrade() {
        char letterGrade;

        if (super.getScore() >= minPassingScore)
            letterGrade = 'P';
        else
            letterGrade = 'F';

        return letterGrade;
    }
}

// third class
class PassFailExam extends PassFailActivity {
    private int numQuestions;   // Number of questions
    private double pointsEach;  // Points for each question
    private int numMissed;      // number missed

    public PassFailExam(int questions, int missed, double minPassing) {
        // Call the superclass constructor.
        super(minPassing);

        // Declare a local variable for the score.
        double numericScore;

        // Set the numQuestions and numMissed fields.
        numQuestions = questions;
        numMissed = missed;

        // Calculate the points for each question and
        // the numeric score for this exam.
        pointsEach = 100.0 / questions;
        numericScore = 100.0 - (missed * pointsEach);

        // Call the superclass's setScore method to
        // set the numeric score.
        setScore(numericScore);
    }

    public double getPointsEach() {
        return pointsEach;
    }

    public int getNumMissed() {
        return numMissed;
    }
}

// final class
public class PassFailExamDemo {
    public static void main(String[] args) {
        String input;           // To hold user input
        int questions;          // Number of questions
        int missed;             // Number of questions missed
        double minPassing;      // Minimum passing score
        String output;          // To hold the output message

        // 1. Get the number of questions on the exam (GUI input).
        input = JOptionPane.showInputDialog("How many questions are on the exam?");
        // Convert the String input to an int.
        questions = Integer.parseInt(input);

        // 2. Get the number of questions missed (GUI input).
        input = JOptionPane.showInputDialog("How many questions did the student miss?");
        // Convert the String input to an int.
        missed = Integer.parseInt(input);

        // 3. Get the minimum passing score (GUI input).
        input = JOptionPane.showInputDialog("What is the minimum passing score?");
        // Convert the String input to a double.
        minPassing = Double.parseDouble(input);

        // Create a PassFailExam object.
        PassFailExam exam = new PassFailExam(questions, missed, minPassing);

        // Build the output message.
        output = "Each question counts " + exam.getPointsEach() + " points.\n" +
                 "The exam score is " + exam.getScore() + "\n" +
                 "The exam grade is " + exam.getGrade();

        // Display the results using a GUI message dialog.
        JOptionPane.showMessageDialog(null, output);
        
        // Terminate the program (necessary for JOptionPane in some environments).
        System.exit(0); 
    }
}


